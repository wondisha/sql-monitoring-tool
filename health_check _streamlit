            st.warning("â±ï¸ **Very Long Running Queries Detected:** Some queries are running for over 5 minutes. Check the 'Long Running Queries' tab for details.")
        else:
            st.info("âœ… No excessively long-running queries detected.")

        if not warehouse_df.empty and warehouse_df['CREDITS_USED'].sum() > 1000: # Example threshold
            st.warning(f"ðŸ’° **Significant Credit Usage:** Total credits used ({total_credits_used:.2f}) are high. Review warehouse utilization.")
        else:
            st.info(f"âœ… Credit usage ({total_credits_used:.2f}) appears normal.")

        if total_failed_tasks > 0:
            st.warning(f"âŒ **Task Failures Detected:** {total_failed_tasks} tasks failed in the last {task_time_range} days. Check 'Tasks & Automation' tab.")
        else:
            st.info("âœ… No task failures detected.")

        if total_failed_logins > 0:
            st.warning(f"ðŸ”’ **Failed Login Attempts:** {total_failed_logins} failed logins in the last {warehouse_time_range} days. Check 'Login & Security' tab.")
        else:
            st.info("âœ… No failed login attempts detected.")

        if total_eligible_acceleration_time > 0:
            st.info(f"âš¡ **Query Acceleration Opportunities:** {len(query_acceleration_eligible_df)} queries are eligible for acceleration, potentially saving {total_eligible_acceleration_time:.2f} seconds. Check 'Query Acceleration' tab.")
        else:
            st.info("âœ… No significant query acceleration opportunities detected.")


        st.subheader("Top 5 Longest Running Queries (Overall)")
        st.dataframe(query_df.nlargest(5, 'EXECUTION_TIME_SECONDS')[
