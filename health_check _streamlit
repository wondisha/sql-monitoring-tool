        st.metric("Total Credits Used (Last 7 Days)", f"{total_credits_used:.2f}")
        st.metric("Current Storage Usage (GB)", f"{total_storage_gb:.2f}")
        st.metric("Failed Tasks (Last 7 Days)", total_failed_tasks)
